#!/usr/bin/env bash

sudo pacman -Syy yay git ansible --noconfirm

git clone https://github.com/kewlfft/ansible-aur.git ~/.ansible/plugins/modules/aur

mkdir ~/git

git clone http://github.com/vinikira/manjaro-playbook ~/git/manjaro-playbook/

cd ~/git/manjaro-playbook/

read -p "Type the user name: " user_name

ansible-playbook playbook.yml --extra-vars="user_name=${user_name}" --ask-become-pass
